<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SapaShowActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

    <ImageView
        android:id="@+id/baeveckID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_image"
        android:backgroundTint="#D500F9"
        android:padding="10dp"
        android:tint="#fff"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:paddingRight="5dp"
        android:elevation="3dp"
        android:background="@drawable/round_shape"/>


    <TextView
        android:id="@+id/nameiD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MEHNDI COMPETITION"
        android:padding="8dp"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#D500F9"
        android:layout_margin="5dp"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D500F9"
        android:layout_marginTop="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp"
                app:cardMaxElevation="3dp"
                app:cardElevation="3dp"
                app:cardPreventCornerOverlap="true"
                android:animationCache="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/summeryID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Summery"
                        android:textColor="#000"
                        android:fontFamily="serif"/>

                    <TextView
                        android:id="@+id/tvID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="To be an eminent and vibrant institute for education, our credo will always be excellence through innovations, empathy, ethics and teamwork and to cater to the ever changing needs of community at large."
                        android:layout_marginTop="10dp"
                        android:textColor="#444"
                        android:fontFamily="sans-serif"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardMaxElevation="3dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            android:animationCache="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member Name:"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"
                android:fontFamily="serif"
                android:textColor="#000"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvmemberID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                tools:itemCount="5"
                tools:listitem="@layout/rv_member_layout"/>



        </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardMaxElevation="3dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            android:animationCache="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evente Gallery:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"
                android:fontFamily="serif"
                android:textColor="#000"
                android:textStyle="bold"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvgalleryID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_margin="5dp"
                tools:listitem="@layout/rv_item"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"/>



        </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardMaxElevation="3dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            android:animationCache="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Winer Student:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"
                android:fontFamily="serif"
                android:textColor="#000"
                android:textStyle="bold"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/winderID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                tools:itemCount="5"
                tools:listitem="@layout/rv_member_layout"/>



        </LinearLayout>
        </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>


        <com.nambimobile.widgets.efab.ExpandableFabLayout
            android:id="@+id/expandable_fab_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:fab_icon="@drawable/web_icon"
            android:layout_margin="5dp">

            <com.nambimobile.widgets.efab.ExpandableFab
                android:id="@+id/expandable_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:efab_color="#9374DE"
                app:fab_icon="@drawable/web_icon"
                app:efab_iconAnimationRotationDeg="-225"
                app:efab_closingAnticipateTension="0" />

            <com.nambimobile.widgets.efab.FabOption
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_color="#FF8800"
                app:fab_icon="@drawable/pdf_icon"
                app:label_text="Download Report"
                app:label_backgroundColor="#808080"
                app:label_textColor="#FFC0CB"/>

            <com.nambimobile.widgets.efab.FabOption
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_color="#5283F5"
                app:fab_icon="@drawable/file_icons"
                app:label_text="Download excel sheet"
                app:label_backgroundColor="#0000FF"/>

            <com.nambimobile.widgets.efab.FabOption
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_color="#007F00"
                app:fab_icon="@drawable/pdf_icon"
                app:label_text="Download PDF"
                app:label_backgroundColor="#7F7F00"/>

        </com.nambimobile.widgets.efab.ExpandableFabLayout>

<!--

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#D500F9"
            android:src="@android:drawable/stat_sys_download_done"
            android:layout_margin="10dp"
            />
-->
    </RelativeLayout>

</LinearLayout>